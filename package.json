{
  "name": "xriba-customer-supplier-ui",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "1.3.6",
    "axios": "^0.20.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "i18next": "^19.7.0",
    "immer": "^7.0.5",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-i18next": "^11.7.0",
    "react-redux": "7.2.0",
    "react-remarkable": "^1.1.3",
    "react-scripts": "^3.4.4",
    "redux": "4.0.5",
    "redux-mock-store": "^1.5.4",
    "redux-saga": "1.1.3",
    "reselect": "4.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:ci": "react-scripts test --watchAll=false --ci --coverage --reporters=jest-junit --reporters=default --coverageReporters=cobertura --coverageReporters=html",
    "build:ci": "rimraf ./build && make-dir ./build && webpack --mode=production",
    "build:dev": "rimraf ./build && make-dir ./build && webpack --env.DEBUG=true --devtool=inline-source-map --watch --progress",
    "serve:dev": "http-server ./build -p 3336 -c-1",
    "dev": "concurrently --kill-others \"npm run build:dev\" \"npm run serve:dev\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "axios-mock-adapter": "^1.17.0",
    "concurrently": "^5.2.0",
    "http-server": "^0.12.3",
    "jest-extended": "^0.11.2",
    "jest-junit": "^8.0.0",
    "jest-junit-reporter": "^1.1.0",
    "make-dir-cli": "^2.0.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "rimraf": "^3.0.2",
    "intl": "^1.2.5",
    "webpack": "4.42.0",
    "webpack-cli": "^3.3.11"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
      "^src(.*)$": "<rootDir>/src$1"
    }
  }
}
